---
import Layout from '../../layouts/Layout.astro';

const faqSchema = JSON.stringify({
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: [
		{
			'@type': 'Question',
			name: '¿Qué incluye el servicio de chofer privado en CDMX?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'El servicio incluye un conductor profesional bilingüe, SUV premium de lujo, traslado puerta a puerta, seguimiento de vuelo en tiempo real y atención personalizada. Disponible para traslados al aeropuerto, viajes ejecutivos, servicio por horas y renta de camioneta blindada con chofer en Ciudad de México.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Cómo reservo un chofer privado en Ciudad de México?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Contáctanos por WhatsApp al +52 5644166523 o llena nuestro formulario de contacto. Comparte tu punto de recogida, destino y fecha, y confirmamos en 15–30 minutos.'
			}
		},
		{
			'@type': 'Question',
			name: '¿A qué aeropuertos de CDMX dan servicio?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Damos servicio al Aeropuerto Internacional Benito Juárez (MEX) y al Aeropuerto Internacional Felipe Ángeles (NLU), así como a todas las terminales de aviación privada en Ciudad de México.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Tienen vehículos blindados disponibles en CDMX?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Sí. Ofrecemos SUVs blindados y Suburbans blindados con chofer profesional para ejecutivos y viajeros que requieren mayor seguridad en Ciudad de México.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Cuáles vehículos están disponibles para chofer privado en CDMX?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Nuestra flota en Ciudad de México incluye Chevrolet Suburban, GMC Yukon Denali, Toyota Land Cruiser y vans ejecutivas — todos de modelo reciente, en perfectas condiciones y con chofer bilingüe.'
			}
		}
	]
});

const whatsappLink = 'https://wa.me/525644166523';
