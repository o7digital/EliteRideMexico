---
import Layout from '../../layouts/Layout.astro';

const faqSchema = JSON.stringify({
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: [
		{
			'@type': 'Question',
			name: '¿Ofrecen traslados al aeropuerto de Guadalajara (GDL)?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Sí. Cubrimos el Aeropuerto Internacional Miguel Hidalgo y Costilla (GDL) con traslados privados en SUV premium y chofer profesional. Disponible para llegadas y salidas las 24 horas.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Qué zonas de Guadalajara cubren con el servicio de chofer?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Cubrimos el Centro Histórico, Zapopan, Tlaquepaque, Tonalá, Tlajomulco, el Corredor Industrial y todos los hoteles y centros de convenciones del área metropolitana de Guadalajara.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Cómo reservo un chofer privado en Guadalajara?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Por WhatsApp al +52 5644166523 o a través de nuestro formulario de contacto. Confirmamos en 15–30 minutos con los detalles de tu chofer y vehículo asignado.'
			}
		},
		{
			'@type': 'Question',
			name: '¿Tienen vehículos blindados en Guadalajara?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Sí. Disponemos de SUVs blindadas (Suburban, GMC Yukon) para ejecutivos y viajeros que requieren mayor seguridad en Guadalajara y el estado de Jalisco.'
			}
		}
	]
});

const whatsappLink = 'https://wa.me/525644166523';
