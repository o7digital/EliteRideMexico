---
import Layout from '../layouts/Layout.astro';

const faqSchema = JSON.stringify({
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: [
		{
			'@type': 'Question',
			name: 'What is an armored vehicle rental in Mexico?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'An armored vehicle rental provides a professionally modified SUV or van with ballistic protection and a trained driver. Elite Ride Mexico offers armored Chevrolet Suburbans and armored SUVs with professional chauffeurs for executives, diplomats, and security-conscious travelers in Mexico.'
			}
		},
		{
			'@type': 'Question',
			name: 'Which cities in Mexico do you offer armored vehicles?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'We provide armored vehicle rental with driver in Mexico City, Cancun, Guadalajara, Monterrey, Puerto Vallarta, Cuernavaca, and more locations across Mexico.'
			}
		},
		{
			'@type': 'Question',
			name: 'Can I rent an armored vehicle without a driver in Mexico?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Our armored vehicles are provided with a trained professional chauffeur. This ensures both vehicle operation safety and client security at all times.'
			}
		},
		{
			'@type': 'Question',
			name: 'What protection level do your armored vehicles offer?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Our armored fleet is equipped to NIJ Level III/IV standards and B4–B6 ballistic ratings, suitable for corporate security, diplomatic escort, and high-risk travel environments in Mexico.'
			}
		},
		{
			'@type': 'Question',
			name: 'How do I book an armored vehicle in Mexico?',
			acceptedAnswer: {
				'@type': 'Answer',
				text: 'Contact Elite Ride Mexico via WhatsApp at +52 5644166523 or through our contact form. Share your dates, city, and security requirements, and we will respond within 30 minutes.'
			}
		}
	]
});

const whatsappLink = 'https://wa.me/525644166523';
