---
import '../styles/clone-overrides.css';

interface Props {
	title?: string;
	description?: string;
	canonicalURL?: string;
	ogImage?: string;
	lang?: string;
	alternateHref?: string;
	alternateLang?: string;
}

const {
	title = 'Elite Ride Mexico | Premium Car Rental & Private Chauffeur Mexico',
	description = 'Elite Ride Mexico — premium SUV rental and private chauffeur service in Mexico City, Cancun, Guadalajara and more. Safe, reliable airport transfers with professional drivers.',
	canonicalURL = Astro.url.href,
	ogImage = 'https://eliteridemexico.com/cars/chevy-suburban-black.webp',
	lang = 'en',
	alternateHref,
	alternateLang
} = Astro.props;

const siteName = 'Elite Ride Mexico';
const siteURL = 'https://eliteridemexico.com';

const jsonLd = JSON.stringify({
	'@context': 'https://schema.org',
	'@type': 'CarRental',
	name: siteName,
	url: siteURL,
	logo: `${siteURL}/favicon.svg`,
	telephone: '+525574085802',
	email: 'info@eliteridemexico.com',
	address: {
		'@type': 'PostalAddress',
		streetAddress: 'Goldsmith 250, Lomas de Chapultepec',
		addressLocality: 'Miguel Hidalgo',
		postalCode: '11500',
		addressRegion: 'CDMX',
		addressCountry: 'MX'
	},
	areaServed: ['Mexico City', 'Cancun', 'Guadalajara', 'Puerto Vallarta', 'Monterrey', 'León', 'Cuernavaca', 'Ixtapa Zihuatanejo'],
	openingHours: 'Mo-Su 00:00-24:00',
	priceRange: '$$$$',
	sameAs: [
		'https://www.instagram.com/eliteridemexico',
		'https://www.facebook.com/eliteridemexico'
	],
	description
});
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="index, follow" />

		<!-- Canonical & hreflang -->
		<link rel="canonical" href={canonicalURL} />
		{alternateHref && alternateLang && (
			<link rel="alternate" hreflang={alternateLang} href={alternateHref} />
		)}
		<link rel="alternate" hreflang={lang} href={canonicalURL} />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />

		<!-- Preconnect CDN -->
		<link rel="preconnect" href="https://cdn.prod.website-files.com" />
		<link rel="dns-prefetch" href="https://cdn.prod.website-files.com" />

		<!-- CSS -->
		<link
			href="https://cdn.prod.website-files.com/6677ef5c2f59c6148debf7e0/css/gearshifttemplate.webflow.shared.a9d9dda81.min.css"
			rel="stylesheet"
			type="text/css"
		/>

		<!-- Primary Meta -->
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content={lang === 'es' ? 'es_MX' : 'en_US'} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={jsonLd} />
	</head>
	<body class="body">
		<slot />
	</body>
</html>
