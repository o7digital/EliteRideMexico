---
import '../styles/clone-overrides.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Elite Ride Mexico | Car Rentals',
	description = 'Premium car rental service in Mexico. Elite Ride Mexico offers luxury vehicles for your perfect getaway.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="body">
		<slot />
	</body>
</html>
